<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="169dp"
    android:layout_height="326dp"
    android:paddingHorizontal="12dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/card_border">

    <LinearLayout
        android:id="@+id/bookmark_holder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:gravity="end">
        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/baseline_bookmark_border_24"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/image_holder"
        android:layout_width="145dp"
        android:layout_height="116dp"
        android:layout_below="@id/bookmark_holder"
        />

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$154.99"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#E8618C"
        android:layout_marginTop="8dp"
        android:layout_below="@id/image_holder"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shell Desk"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/price"/>
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="This is a description"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_below="@id/title"
        android:ellipsize="end"
        android:singleLine="true" />

    <android.widget.Button
        android:id="@+id/btnAddToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        android:textSize="12sp"
        android:textColor="#636AE8"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/cart_button"
        />
</RelativeLayout>